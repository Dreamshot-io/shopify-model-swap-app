generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model ABTest {
  id            String          @id
  shop          String
  productId     String
  name          String
  status        String          @default("DRAFT")
  trafficSplit  Int             @default(50)
  startDate     DateTime?
  endDate       DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  events        ABTestEvent[]
  variants      ABTestVariant[]

  @@index([status, startDate])
  @@index([shop, productId])
  @@index([shop, status])
}

model ABTestEvent {
  id        String   @id
  testId    String
  sessionId String
  variant   String
  eventType String
  productId String
  revenue   Decimal?
  createdAt DateTime @default(now())
  ABTest    ABTest   @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@index([testId, createdAt])
  @@index([testId, eventType])
  @@index([testId, sessionId])
}

model ABTestVariant {
  id        String @id
  testId    String
  variant   String
  imageUrls String
  ABTest    ABTest @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@index([testId, variant])
}

model MetricEvent {
  id        String   @id
  shop      String
  type      String
  productId String?
  imageUrl  String?
  createdAt DateTime @default(now())
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}
