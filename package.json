{
	"name": "dreamshot-model-swap",
	"private": true,
	"scripts": {
		"build": "npm run build:script && prisma generate && remix vite:build",
		"build:script": "terser public/image-replacer.js -c -m --toplevel -o public/image-replacer.min.js",
		"dev": "./scripts/dev.sh",
		"dev:stable": "./scripts/dev-stable.sh",
		"update-domain": "./scripts/update-domain.sh",
		"config:link": "shopify app config link",
		"generate": "shopify app generate",
		"deploy": "shopify app deploy",
		"config:use": "shopify app config use",
		"env": "shopify app env",
		"start": "remix-serve ./build/server/index.js",
		"docker-start": "npm run setup && npm run start",
		"setup": "prisma generate && prisma db push",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"shopify": "shopify",
		"prisma": "prisma",
		"graphql-codegen": "graphql-codegen",
		"vite": "vite",
		"db:up": "docker compose up -d postgres",
		"db:down": "docker compose down",
		"db:logs": "docker compose logs -f postgres",
		"db:psql": "docker exec -it dreamshot-postgres psql -U postgres -d dreamshot",
		"postinstall": "prisma generate",
		"vercel-build": "npm run build",
		"env:init": "bash ./scripts/init-env.sh",
		"migrate:dev": "if [ -z \"$DATABASE_URL\" ]; then echo \"DATABASE_URL not set. Skipping migrate dev.\"; else npx prisma migrate dev; fi",
		"migrate:deploy": "if [ -z \"$DATABASE_URL\" ]; then echo \"DATABASE_URL not set. Skipping migrate deploy.\"; else npx prisma migrate deploy; fi",
		"db:seed": "bash -lc 'if [ -z \"$DATABASE_URL\" ]; then echo \"DATABASE_URL not set. Skipping seed.\"; else ts-node --transpile-only prisma/seed.ts || node --loader ts-node/esm prisma/seed.ts || node build/prisma/seed.js; fi'"
	},
	"type": "module",
	"dependencies": {
		"@aws-sdk/client-s3": "3.879.0",
		"@aws-sdk/s3-request-presigner": "3.879.0",
		"@fal-ai/client": "1.6.2",
		"@prisma/client": "^6.2.1",
		"@remix-run/dev": "^2.16.1",
		"@remix-run/fs-routes": "^2.16.1",
		"@remix-run/node": "^2.16.1",
		"@remix-run/react": "^2.16.1",
		"@remix-run/serve": "^2.16.1",
		"@vercel/remix": "^2.16.7",
		"@shopify/app-bridge-react": "^4.1.6",
		"@shopify/cli": "3.84.1",
		"@shopify/polaris": "^12.0.0",
		"@shopify/shopify-app-remix": "^3.7.0",
		"@shopify/shopify-app-session-storage-prisma": "^6.0.0",
		"isbot": "^5.1.0",
		"prisma": "^6.2.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"vite-tsconfig-paths": "^5.0.1"
	},
	"devDependencies": {
		"@remix-run/eslint-config": "^2.16.1",
		"@remix-run/route-config": "^2.16.1",
		"@shopify/api-codegen-preset": "^1.1.1",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.2.0",
		"@types/react": "^18.2.31",
		"@types/react-dom": "^18.2.14",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^10.0.1",
		"prettier": "^3.2.4",
		"terser": "^5.44.0",
		"typescript": "^5.2.2",
		"vite": "^6.2.2"
	},
	"workspaces": [
		"extensions/*"
	],
	"trustedDependencies": [
		"@shopify/plugin-cloudflare"
	],
	"resolutions": {
		"@graphql-tools/url-loader": "8.0.16",
		"@graphql-codegen/client-preset": "4.7.0",
		"@graphql-codegen/typescript-operations": "4.5.0",
		"minimatch": "9.0.5",
		"vite": "^6.2.2"
	},
	"overrides": {
		"@graphql-tools/url-loader": "8.0.16",
		"@graphql-codegen/client-preset": "4.7.0",
		"@graphql-codegen/typescript-operations": "4.5.0",
		"minimatch": "9.0.5",
		"vite": "^6.2.2",
		"@vercel/remix": {
			"@remix-run/dev": "^2.16.1"
		}
	},
	"author": "javierjrueda"
}
