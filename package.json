{
  "name": "dreamshot-model-swap",
  "private": true,
  "scripts": {
    "env:init": "bash ./scripts/init-env.sh",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:psql": "docker exec -it dreamshot-postgres psql -U postgres -d dreamshot",
    "build": "npm run build:script && prisma generate && remix vite:build",
    "build:script": "terser public/image-replacer.js -c -m --toplevel -o public/image-replacer.min.js",
    "dev": "./scripts/dev.sh",
    "dev:stable": "./scripts/dev-stable.sh",
    "update-domain": "./scripts/update-domain.sh",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate && prisma db push",
    "postinstall": "prisma generate",
    "vercel-build": "npm run build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite"
  },
